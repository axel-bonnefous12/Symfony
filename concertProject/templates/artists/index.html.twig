{% extends 'base.html.twig' %}

{% block title %}Artists index{% endblock %}

{% block body %}

    <br><br><br><br><br><br>
    <div class="container-lg">
        <div class="row">
            <div class="col">
            </div>
                <div class="col">
                    <table class="table table-dark table-striped">
                        <thead>
                        <tr>
                            <th style="text-align: center" colspan="4">Artists</th>
                        </tr>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>FirstName</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for artist in artists %}
                            <tr>
                                <td>{{ artist.id }}</td>
                                <td>{{ artist.name }}</td>
                                <td>{{ artist.firstName }}</td>
                                <td>
                                    <a class="btn btn-light" href="{{ path('artists_show', {'id': artist.id}) }}">show</a>
                                    <a class="btn btn-light" href="{{ path('artists_edit', {'id': artist.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
            </div>
            <div class="col">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center justify-content-center">
                    <a class='btn btn-secondary' href="{{ path('bands_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
