{% extends 'base.html.twig' %}

{% block title %}Hello ConcertController!{% endblock %}

{% block body %}

    <br>
    <br>
    <br>
    <br>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th style="text-align: center" colspan="5">{{ concertsById.getRoom().getName() }}</th>
                        </tr>
                        <tr>
                            <th scope="col">Room</th>
                            <th scope="col">Band</th>
                            <th scope="col">Organizer</th>
                            <th scope="col">Start date</th>
                            <th scope="col">End date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ concertsById.getRoom().getName() }}</td>
                            <td>{{ concertsById.getBand().getName() }}</td>
                            <td>{{ concertsById.getOrganisation().getFirstName() }} {{ concertsById.getOrganisation().getName() }}</td>
                            <td>{{ concertsById.getBegin()|date('Y-m-d') }}</td>
                            <td>{{ concertsById.getEnd()|date('Y-m-d') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% include('footer.html.twig') %}
{% endblock %}


